{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Forgotten Password{% endblock %}

{% block fos_user_content %}
<div class="kt-login__forgot" style="display: block;">
    <div class="kt-login__head">
        <h3 class="kt-login__title">Forgotten Password ?</h3>
        <div class="kt-login__desc" style="text-align: left">
            <p>An email has been sent. It contains a link you must click to reset your password.</p>
            <p>If you don't get an email check your spam folder or try again.</p>
        </div>
    </div>
    <form class="kt-form">
        <div class="kt-login__actions">
            <a href="{{ path('fos_user_security_login') }}" id="kt_login_forgot_submit" class="btn btn-brand btn-elevate kt-login__btn-primary" style="padding-top: 1.2rem;">
                Login
            </a>
        </div>
    </form>
</div>
{% endblock %}
