{% trans_default_domain 'FOSUserBundle' %}

<div class="kt-login__forgot" style="display: block;">
    <div class="kt-login__head">
        <h3 class="kt-login__title">Forgotten Password ?</h3>
        <div class="kt-login__desc">Enter your email to reset your password:</div>
    </div>
    {% if error %}
        <div class="alert alert-danger alert-dismissible" role="alert">
            <div class="alert-text">{{ error }}</div>
            <div class="alert-close">
                <i class="fa fa-times fa-sm" data-dismiss="alert"></i>
            </div>
        </div>
    {% endif %}
    <form class="kt-form" action="{{ path('fos_user_resetting_send_email') }}" method="POST">
        <div class="input-group">
            <input class="form-control" type="email" placeholder="Email" id="username" name="username" required="required" autocomplete="off"/>
        </div>
        <div class="kt-login__actions">
            <input type="submit" id="kt_login_forgot_submit" class="btn btn-brand btn-elevate kt-login__btn-primary" value="Reset password" />
            <a href="{{ path('fos_user_security_login') }}" id="kt_login_forgot_cancel" class="btn btn-light btn-elevate kt-login__btn-secondary" style="padding-top: 1.2rem;">
                Cancel
            </a>
        </div>
    </form>
</div>
