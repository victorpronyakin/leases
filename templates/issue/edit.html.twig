{% extends 'sites_and_leases/layout.html.twig' %}

{% block title %}Edit Issue{% endblock %}

{% block breadcrumbs %}
    <h3 class="kt-subheader__title">Edit Issue</h3>
{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block body %}
    <div class="kt-container  kt-grid__item kt-grid__item--fluid">
        <div class="kt-portlet">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-label">
                    <h3 class="kt-portlet__head-title">
                        Edit Issue
                    </h3>
                </div>
            </div>
            <!--begin::Form-->
            <form class="kt-form" action="{{ path('issue_edit', {id:issue.id}) }}" method="post" id="issueForm">
                <div class="kt-portlet__body">
                    <div class="kt-section kt-section--first">
                        <div class="kt-section__body">
                            <div class="form-group">
                                <label>Site</label>
                                <select class="form-control" name="site" disabled>
                                    <option value="">Select a Site</option>
                                    {% for site in sites %}
                                        <option value="{{ site.id }}" {{ (issue.site is defined and issue.site.id is defined and issue.site.id == site.id) ? 'selected' : '' }}>
                                            {{ site.number }} - {{ site.name }}
                                        </option>
                                    {% endfor %}
                                </select>
                                {% if (userPermissionSite.view is defined and userPermissionSite.view == true) or (userPermissionSite.edit is defined and userPermissionSite.edit == true) %}
                                    <div class="mt-2">
                                        <a href="{{ path('site_edit', {id:issue.site.id}) }}">Open Site Details</a>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                <label>Issue Type</label>
                                <select class="form-control" name="type">
                                    <option value="">Select a Issue Type</option>
                                    {% for issueType in issueTypes %}
                                        <option value="{{ issueType.id }}" {{ (issue.type is defined and issue.type.id is defined and issue.type.id == issueType.id) ? 'selected' : '' }}>
                                            {{ issueType.name }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Issue Details</label>
                                <textarea class="form-control" name="details" placeholder="Issue Details">{{ issue.details }}</textarea>
                            </div>
                            <div class="form-group">
                                <label>Status:</label>
                                <select class="form-control" name="status">
                                    <option value="1" {{ (issue.status == true) ? 'selected' : '' }}>Open</option>
                                    <option value="0" {{ (issue.status == false) ? 'selected' : '' }}>Close</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="kt-portlet__foot">
                    {% if userPermission.edit is defined and userPermission.edit == true %}
                        <div class="kt-form__actions text-right">
                            <button name="submit" type="submit" class="btn btn-success">Update</button>
                        </div>
                    {% endif %}
                </div>
            </form>
            <!--end::Form-->
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/vendors/general/jquery-form/dist/jquery.form.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/vendors/general/jquery-validation/dist/jquery.validate.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/vendors/custom/js/vendors/jquery-validation.init.js') }}" type="text/javascript"></script>

    <script src="{{ asset('assets/js/pages/issue_edit.js') }}" type="text/javascript"></script>
{% endblock %}
